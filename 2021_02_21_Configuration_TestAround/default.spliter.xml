        <none>NoClick</none>
        <onlyfirst>OnlyLeftCLick</onlyfirst>
        <onlysecond>OnlyRightClick</onlysecond>
        <both>LeftAndRightClick</both>
    </duospliter>   

    <duospliter first="PageUp" second= "PageDown" name="MouseSideButton">
